{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noEmitHelpers": true,
    "sourceMap": true,
    "experimentalDecorators": true, //启用实验性的ES装饰器
    "emitDecoratorMetadata": true, //给源码里的装饰器声明加上设计类型元数据"
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}